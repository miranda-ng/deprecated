    LTEXT           "Multicast address:",IDC_STATIC,24,61,60,8
    CONTROL         "Use unicode (UTF-8) encoding per default",
                    IDC_CONN_CHECK_UTF8,"Button",BS_AUTOCHECKBOX | 
